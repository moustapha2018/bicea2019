{% extends 'template.html.twig' %}
{% block title %}les Projets{% endblock %}
{% block body %}

    <div class="container">
        <div class="container">
            <h4><span class="glyphicon glyphicon-th-list"> </span> Listes des projets f</h4>
            <div class="table-responsive">
                <table class="table table-hover">

                    <thead>
                    <tr>
                        <th scope="col">Nom du projet</th>
                        <th scope="col">Description</th>
                        <th scope="col"><span class="glyphicon glyphicon-calendar"> </span> Dates</th>
                        <th scope="col"><span class="glyphicon glyphicon-cog"></span> Actions </th>
                    </tr>
                    </thead>
                    {% for project in projects %}
                        <tbody>
                        <tr>
                            <td>{{ project.projectName |truncate(25, false, '...')}}</td>
                            <td>{{ project.description |truncate(55, false, '...') }}</td>
                            <td>{{ project.createdAt| date('d/m/Y' ) }}</td>
                            <td>
                                <a href="{{ path('task_parameter', {'id': project.id}) }}" class="btn btn-warning"><strong class="glyphicon glyphicon-pencil"> Voir</strong></a>
                            </td>

                        </tr>

                        </tbody>
                    {% endfor %}
                </table>

            </div>

        </div>
    </div>
{% endblock %}