{% extends 'template.html.twig' %}
{% block title %}Enregistrement d'un projet{% endblock %}
{% block body %}


    <div class="container" xmlns="http://www.w3.org/1999/html">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} mt-10">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
        <h4><span class="glyphicon glyphicon-plus"></span> Enregistrer une fonction</h4>
        {{ form(form) }}

    </div>
    <div class="container">
        <h4><span class="glyphicon glyphicon-th-list"> </span> Listes des projet</h4>
        <div class="table-responsive">
            <table class="table table-hover">

                <thead>
                <tr>
                    <th scope="col">Nom du projet</th>
                    <th scope="col">Description</th>
                    <th scope="col"><span class="glyphicon glyphicon-calendar"> </span> Dates</th>
                    <th scope="col"><span class="glyphicon glyphicon-cog"></span> Actions </th>
                </tr>
                </thead>
                {% for project in projects %}
                    <tbody>
                    <tr>
                        <td>{{ project.projectName |truncate(25, false, '...')}}</td>
                        <td>{{ project.description |truncate(55, false, '...') }}</td>
                        <td>{{ project.createdAt| date('d/m/Y' ) }}</td>
                        <td>
                            <a href="{{ path('edit_project', {'id': project.id}) }}" class="btn btn-warning"><strong class="glyphicon glyphicon-pencil"> Modifier</strong></a>
                            <a href="{{ path('delete_project', {'id': project.id}) }}" class="btn btn-danger"> <strong class="glyphicon glyphicon-remove"> Supprimer</strong></a>
                        </td>

                    </tr>

                    </tbody>
                {% endfor %}
            </table>

        </div>

    </div>


{% endblock %}