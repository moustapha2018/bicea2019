{% extends 'template_business.html.twig' %}
{% block title %}Page catalogue{% endblock %}
{% block body %}

    <div class="container-fluid mt-2">
        <div class="row ">
            <div class="col-2">
                <form  action="#" method="POST">
                    <div class="form-group" >
                        <input type="text" class="form-control" id="keyword" placeholder="Que rechercher-vous ?" name="keyword">
                    </div>
                    <div class="form-group" >
                        <label for="keyword">Prix minimum</label>
                        <input  type="number"  max="99" min="1" name="minPrice" class="form-control"/>
                    </div>
                    <div class="form-group" >
                        <label for="keyword">Prix </label>
                        <input  type="number"  max="99" min="1" name="minPrice" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label for="">Categorie:</label>
                        <select class="form-control" id="">

                            {% for category in categories %}
                                <option>{{ category.categoryName }} </option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Rechercher</button>
                    </div>
                </form>
            </div>
            <div class="col-10">
                <div class="row ">
                    {% for article in articles %}
                        <div class="col-md-3">
                            <div class="car text-center" >
                                <div style="border-style: groove;background-color: white" >
                                    <div class="" >
                                        <img  style="width: 100%; height: 200px;" class="image-style img-responsive" src="{{ asset('uploads/images_articles/'~article.BiceaAdmin.id~'-'~ article.articleName~'/'~ article.image) }}" height="200" alt="{{ article.articleName }}" />
                                    </div>
                                    <div class="card-body" style="background-color: #F5F5F5">
                                        <h5 class="card-title">
                                            <a id="produits" href="#">{{ article.articleName }}</a>
                                        </h5>
                                        <p class="card-text">
                                            {{ article.description}}
                                        </p>
                                        <div class="text-danger" style="font-size: 2em">{{ article.unitPrice }} FG /{{ article.articleQuantity }} {{ article.unit }}</div>
                                        <p class="card-text">
                                            <a class="btn btn-primary" role="button"  href="{{ path('article.show', {'id': article.id }) }}">En savoir plus...</a>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}

                </div>
            </div>
        </div>
    </div>

    <div class="container">

        <div class="row mt-3">
            <div class="col-5"></div>
            <div class="col-5">
                <div class="navigation navigator-center">
                    {{ knp_pagination_render(articles) }}
                </div>
            </div>
        </div>

    </div>
{% endblock %}