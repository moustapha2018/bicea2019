{% extends 'template.html.twig' %}
{% block title %}Enregistrement d'un contrat{% endblock %}
{% block body %}


    <div class="container" xmlns="http://www.w3.org/1999/html">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} mt-10">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
        <h4><span class="glyphicon glyphicon-plus"></span> Enregistrer un contrat</h4>
        {{ form(form) }}
    </div>
    <div class="container">
        <h4><span class="glyphicon glyphicon-th-list"> </span> Listes des contrats</h4>
        <div class="table-responsive">
            <table class="table table-hover">

                <thead>
                <tr>
                    <th scope="col">Noms</th>
                    <th scope="col">Salaire</th>
                    <th scope="col">Date debut</th>
                    <th scope="col"><span class="glyphicon glyphicon-comment"> </span> Date de fin</th>
                    <th scope="col"><span class="glyphicon glyphicon-calendar"> </span> Salaire</th>
                    <th scope="col"><span class="glyphicon glyphicon-calendar"> </span> Date de cr√©ation</th>
                    <th scope="col"><span class="glyphicon glyphicon-cog"></span> Actions </th>
                </tr>
                </thead>
                {% for contract in contracts %}
                    <tbody>
                    <tr>
                        <td>{{ contract.rhuser.firstname |truncate(25, false, '...')}}</td>
                        <td>{{ contract.salary |truncate(25, false, '...')}}</td>
                        <td>{{ contract.startDate |date('d/m/Y' ) }}</td>
                        <td>{{ contract.endDate |date('d/m/Y' )}}</td>
                        <td>{{ contract.createdAt| date('d/m/Y' ) }}</td>
                        <td>
                            <a href="{{ path('edit_rh_contract', {'id': contract.id}) }}" class="btn btn-warning"><strong class="glyphicon glyphicon-pencil"> Modifier</strong></a>
                            <a href="{{ path('delete_rh_contract', {'id': contract.id}) }}" class="btn btn-danger"> <strong class="glyphicon glyphicon-remove"> Supprimer</strong></a>
                        </td>

                    </tr>

                    </tbody>
                {% endfor %}
            </table>

        </div>

    </div>


{% endblock %}